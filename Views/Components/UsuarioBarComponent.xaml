<UserControl x:Class="ProjetoEscola.Views.Components.UsuarioBarComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjetoEscola.Views.Components"
             mc:Ignorable="d">
    <Grid>
        <WrapPanel>
            <StackPanel Margin="10">
                <TextBlock x:Name="textNome" Foreground="Black" FontSize="18px" FontWeight="Medium" HorizontalAlignment="Right"/>
                <TextBlock  x:Name="textPerfil" Foreground="Black" FontSize="14px" HorizontalAlignment="Right" />
            </StackPanel>

            <Ellipse Width="50" Height="50">
                <Ellipse.Fill>
                    <ImageBrush x:Name="imgBrush" />
                </Ellipse.Fill>
            </Ellipse>


        </WrapPanel>
            
    </Grid>
</UserControl>
